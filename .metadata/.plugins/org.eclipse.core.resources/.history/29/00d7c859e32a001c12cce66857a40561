public class Hellpers {
	public static void main(String[] args) {
		int tama = 12, dinheiro = 20;
		for (int i = 1; dinheiro > tama; i++) {
			System.out.println("O "+ i +"° tamagochi custará R$ " + tama + ",00");
			dinheiro -= tama;
			if (tama > 1)
			tama -= 4;
			else 
			tama = 1;
			System.out.println("Dinheiro restante R$ " +dinheiro+ ",00");
		}
	}
}
