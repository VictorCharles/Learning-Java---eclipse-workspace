//a = 5;
//ENQUANTO x > 1 FAÇA:
//y = x + a;
//x = x / 2;
//a = a + x + y;
//FIM ENQUANTO
//IMPRIME(a);


public class Hellpers {
	public static void main(String[] args) {
		// declaração de variaveis a ser utilizada
		int x = 8, y = 0, a = 5;
		for (;x > 1;) {
			y = x + a;
			x = x / 2;
			a = a + x + y;
		}
		System.out.println(a);
	}
}
